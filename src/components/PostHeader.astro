---
// lilrary import
import { Image } from "@astrojs/image/components";
// utils imports
import { formatDate, slugify } from "../js/utils.js";

const { title, date, category, author, image } = Astro.props;
---

<header>
  <div class="conatiner">
    <small>
      <a href={`/category/${slugify(category)}/`} class="badge">{category}</a>
    </small>
    <h1 class="h2">{title}</h1>
    <p>
      by: <a href={`/author/${slugify(author)}/`}>{author}</a>
       â˜º {formatDate(date)}
    </p>
  </div>
  <Image
    width={820}
    height={460}
    format="avif"
    fit="fill"
    quality={80}
    aspectRatio="5:2"
    class="hero-image"
    src={image.src}
    alt={image.alt}
  />
</header>
